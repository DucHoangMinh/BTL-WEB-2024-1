extends layouts/main

block content
  h1.text-center Edit Todo
  form(action=`/todo/${todo.id}/update?_method=PUT` method="POST")
    .form-group
      label(for="title") Title
      input.form-control(type="text" name="title" id="title" value=todo.title required)
    .form-group
      label(for="description") Description
      textarea.form-control(name="description" id="description" required)= todo.description
    button.btn.btn-primary(type="submit") Update
